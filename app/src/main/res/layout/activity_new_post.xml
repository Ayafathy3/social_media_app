<?xml version="1.0" encoding="utf-8"?><!--suppress AndroidDomInspection -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ba44"
    android:orientation="vertical"
    tools:context="com.example.android.socialmedia.Activity.NewPost">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar_newPost"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#f5d5d5" />

    <ProgressBar
        android:id="@+id/progress_bar_newPost"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        android:indeterminate="true"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/new_post_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:padding="@dimen/_4sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/post_placeholder" />

    <EditText
        android:id="@+id/new_post_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp"
        android:ems="10"
        android:hint="Enter your post"
        android:inputType="textMultiLine"
        android:maxLength="125"
        android:textSize="@dimen/_18sdp"
        android:padding="@dimen/_12sdp"
        android:textColorHint="#766b69" />

    <Button
        android:id="@+id/add_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_30sdp"
        android:background="@drawable/round_corner_button"
        android:gravity="center"
        android:text="Add your post "
        android:textAllCaps="false"
        android:textColor="#a40f0f"
        android:textSize="@dimen/_18sdp" />
</LinearLayout>
